<div class="container">
  <!-- Jumbotron -->
  <div class="jumbotron hide-on-small-only" style="background-color: black; color: white">
    <h4 class="text-center">Search For Your Favorite Movie </h4>
    <h6 class="text-center"></h6>
    
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="playlist-container">
        <h1>Playlists</h1>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th># of Movies</th>
              <th>See Playlist's Movies</th>
              {{!-- <th>New Movie</th> --}}
              <th>Delete Playlist</th>
            </tr>
          </thead>
          <tbody>
            <tr id="form-row">
              <form id="playlist-form">
                <td colspan="4">
                  <input placeholder="Enter a playlist name" id="playlist-name" type="text" />
                </td>
                <td>
                  <button type="submit" class="btn btn-info">Create Playlist</button>
                </td>
              </form>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">

    <div class="col-8">

      <!-- Current Movies-->
      <div class="card">
        <div class="card-header"><strong>Add Movie </strong></div>
        <div class="card-body">
          <div class="form">
            <label for="movie-search"><i class="fas fa-film"></i> Search Your Movie </label>
            <input class="form-control" id="movie-search" placeholder="Movie Name" type="text">
            {{!-- <div class="col s12 m6">
                  <button class="btn blue darken-3 z-depth-3 " id="submit" type="submit"><strong>Movie</strong>
                  </button>
                </div> --}}
            <div class="col col-m6">
              <!-- button for ALL MOVIES -->
              <button class="btn btn-info" id="submitAll" type="submit"><strong>All
                  Movies </strong> </button>
            </div>
            <div class="col-m6 ">
              <div class="form-group">
                <label for="category">Select Playlist:</label>
                <select class="custom-select" id="playlist">
                </select>
              </div>
              <br />
              {{!-- <button type="submit" class="btn btn-success submit">Submit</button> --}}
            </div>
          </div>
        </div>

      </div>
    </div>

  </div>

  <!-- Entry Form FOR ALL MOVIES -->
  <div class="row justify-content-center" id="all-movies-row">
    <div class="col-12">
      <div class="card mb-4">
        <div class="card-header"><strong>All Movies</strong></div>
        <div class="card-body">
          <div class="row" id="allmovie-list"></div>
        </div>
      </div>
    </div>

  </div>
</div>

{{!-- Testing my playlists --}}
<div class="container">
  <div class="row justify-content-center">
  
    {{#each playlists}}
    <div class="col-4">
      <h3 class="text-center">{{name}}</h3>
      {{#each Movies}}
      <div class="col-6">
        <h3>Title: {{title}}</h3>
        <p>Year: {{year}}</p>
        <p>IMDB Link: {{link}}</p>
      </div>
      {{/each}}
    </div>
  
    {{/each}}
  </div>
</div>


